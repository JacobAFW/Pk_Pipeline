#!/bin/bash
#PBS -N VCF_Con
#PBS -j oe
#PBS -m ae
#PBS -l nodes=1
#PBS -l ncpus=11
#PBS -l mem=50gb
#PBS -l walltime=48:00:00
#PBS -M jacob.westaway@menzies.edu.au

echo "---------------------------------------"
echo "PBS: Job identifier is $PBS_JOBID"
echo "PBS: Job name is $PBS_JOBNAME"

echo "---------------------------------------"
echo "Define paths to samtools"
export PATH=$PATH:/usr/local/jdk1.8.0_131/bin
export PATH=$PATH:/usr/local/jre1.8.0_111/bin
export PATH=$PATH:/usr/local/GenomeAnalysisTK-3.2.2 
export PATH=$PATH:/usr/local/miniconda3/envs/assembly/bin/

echo "---------------------------------------"
echo 'Change to working directory and set env variables'
INDIR="/home/jwestaway/pk_pipeline/low_parasitemia/outputs/pk_alignment"
OUTDIR="/home/jwestaway/pk_pipeline/ZB_100/outputs/vcf_consensus/GATK/PK_SB_DNA_063_DKDL210002192-1a_HWHGKDSXY_L4"
PICARD="/usr/local/miniconda3/pkgs/picard-2.21.9-0/share/picard-2.21.9-0/picard.jar"
INDEXTDIR="/home/jwestaway/pk_pipeline/ref_genomes/PKA1H1/fasta/strain_A1_H.1.Icor.fasta"

mkdir $OUTDIR

echo "---------------------------------------"
echo 'MarkDuplicates'

/usr/local/jdk1.8.0_131/bin/java -Djava.iodir=$PBS_JOBFS -jar $PICARD \
    MarkDuplicates AS=TRUE VALIDATION_STRINGENCY=LENIENT \
    I=$INDIR/PK_SB_DNA_063_DKDL210002192-1a_HWHGKDSXY_L4.sorted.bam \
    O=$OUTDIR/PK_SB_DNA_063_DKDL210002192-1a_HWHGKDSXY_L4.dupmarked.bam \
    M=$OUTDIR/PK_SB_DNA_063_DKDL210002192-1a_HWHGKDSXY_L4_picard_metrics_file.txt 

echo "---------------------------------------"
echo 'Change header @RG and index' 
samtools view -H $OUTDIR/PK_SB_DNA_063_DKDL210002192-1a_HWHGKDSXY_L4.dupmarked.bam | \
    sed 's,^@RG.*,@RG\tID:PK_SB_DNA_063_DKDL210002192-1a_HWHGKDSXY_L4\tSM:PK_SB_DNA_063_DKDL210002192-1a_HWHGKDSXY_L4\tLB:None\tPL:Illumina,g' |  \
    samtools reheader - $OUTDIR/PK_SB_DNA_063_DKDL210002192-1a_HWHGKDSXY_L4.dupmarked.bam > $OUTDIR/PK_SB_DNA_063_DKDL210002192-1a_HWHGKDSXY_L4.dupmarked.reheader.bam

samtools index $OUTDIR/PK_SB_DNA_063_DKDL210002192-1a_HWHGKDSXY_L4.dupmarked.reheader.bam 

echo "---------------------------------------"
echo 'HaplotypeCaller' 

/usr/local/jdk1.8.0_131/bin/java -Djava.iodir=$PBS_JOBFS -Xms3200m -Xmx3600m -jar /usr/local/GenomeAnalysisTK-3.2.2/GenomeAnalysisTK.jar \
    -T HaplotypeCaller \
    -nt 1 \
    -ERC GVCF \
    --minPruning 3 \
    --maxNumHaplotypesInPopulation 200 \
    --max_alternate_alleles 3 \
    --variant_index_type LINEAR \
    --variant_index_parameter 128000 \
    -contamination 0.0 \
    -R $INDEXTDIR \
    -I $OUTDIR/PK_SB_DNA_063_DKDL210002192-1a_HWHGKDSXY_L4.dupmarked.reheader.bam \
    -o $OUTDIR/PK_SB_DNA_063_DKDL210002192-1a_HWHGKDSXY_L4.haplotypecaller.vcf.gz

echo 'GenotypeGVCFs' 

/usr/local/jdk1.8.0_131/bin/java -Djava.iodir=$PBS_JOBFS -Xms3200m -Xmx3600m -jar /usr/local/GenomeAnalysisTK-3.2.2/GenomeAnalysisTK.jar \
    -T GenotypeGVCFs \
    -nt 1 \
    -R $INDEXTDIR \
    -V $OUTDIR/PK_SB_DNA_063_DKDL210002192-1a_HWHGKDSXY_L4.haplotypecaller.vcf.gz \
    -o $OUTDIR/PK_SB_DNA_063_DKDL210002192-1a_HWHGKDSXY_L4.vcf.gz
    --tmp-dir=/home/jwestaway/pk_pipeline/ZB_100/outputs/tmp


echo "---------------------------------------"
echo 'Finished' 